<body>
    <header>
        <div class="home-nav">
            <a class="logo" href="/">TRAKIT</a>
            <nav class="nav-nav">
                <ul>
                    <li><a href="/sign-in">Sign In</a></li> 
                    <li><a href="/register">Register</a></li>
                    <li><a href="/movies">Movies</a></li>
                    <li><a href="/series">Series</a></li>
                </ul>
            </nav>
            <div class="search-bar">
                <input type="search" class="search-input" placeholder="Search here..." tabindex="0">
                <button class="search-submit" tabindex="0">
                    <i class="fa-solid fa-magnifying-glass fa-xs"></i>
                </button>
            </div>
        </div>
    </header>
    <section id="movie-section">
        <h2 class="title">Movies</h2>
        <section class="filters">
            <div class="dropdown-center">
                <button class="btn btn-secondary dropdown-toggle btn-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Year
                </button>
                <ul id="decade-dropdown" class="dropdown-menu">
                </ul>
            </div>
            <div class="dropdown-center">
                <button class="btn btn-secondary dropdown-toggle btn-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Genre
                </button>
                <ul id="genre-dropdown" class="dropdown-menu">
                    <% genres.forEach(genre => { %>
                        <li><a class="dropdown-item" href="#" data-genre-id="<%= genre.id %>"><%= genre.name %></a></li>
                        <% }) %>
                    </ul>
                </div>
                <div class="dropdown-center">
                    <button class="btn btn-secondary dropdown-toggle btn-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Country
                    </button>
                    <ul id="country-dropdown" class="dropdown-menu">
                        <% countries.forEach(country => { %>
                            <li><a class="dropdown-item" href="#" data-country-code="<%= country.iso_3166_1 %>"><%= country.english_name %></a></li>
                            <% }) %>
                        </ul>
                    </div>
                    <div class="dropdown-center">
                        <button class="btn btn-secondary dropdown-toggle btn-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Runtime
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Short &#40;90 minutes or less&#41;</a></li>
                            <li><a class="dropdown-item" href="#">Medium &#40;90 &#45; 120 minutes&#41;</a></li>
                            <li><a class="dropdown-item" href="#">Long &#40;120 minutes or more&#41;</a></li>
                        </ul>
                    </div>
                </section>
                <div class="content">
                    <% movies.forEach(movie => { %>
                        <div class="card">
                            <a class="movie-poster">
                                <img src="https://image.tmdb.org/t/p/w500<%= movie.poster_path %>" alt="<%= movie.title %>">
                            </a>
                        </div>
                        <% }) %>
                    </div>
    </section>
    <div class="pagination">
        <% if (currentPage > 1) { %>
            <a href="?page=<%= currentPage - 1 %>" class="btn btn-secondary btn-sm">Previous</a>
        <% } %>
        <span>Page <%= currentPage %> of <%= totalPages %></span>
        <% if (currentPage < totalPages) { %>
            <a href="?page=<%= currentPage + 1 %>" class="btn btn-secondary btn-sm">Next</a>
        <% } %>
    </div>
    
    <script src="./scripts/movies.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
