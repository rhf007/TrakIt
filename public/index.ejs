<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TrakIt</title>
    <link rel="stylesheet" type="text/css" href="./styles/index-style.css">
    <link rel="apple-touch-icon" sizes="180x180" href="./images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="./images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="./images/favicon-16x16.png">
    <link rel="manifest" href="./images/site.webmanifest">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/888c06406f.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <div class="home-nav">
            <a class="logo" href="/">TRAKIT</a>
            <nav class="nav-nav">
                <ul>
                    <li><a href="/sign-in">Sign In</a></li> 
                    <li><a href="/register">Register</a></li>
                    <li><a href="/movies">Movies</a></li>
                    <li><a href="/series">Series</a></li>
                </ul>
            </nav>
            <div class="search-bar">
                <input type="search" class="search-input" placeholder="Search here..." tabindex="0">
                <button class="search-submit" tabindex="0">
                    <i class="fa-solid fa-magnifying-glass fa-xs"></i>
                </button>
            </div>
        </div>
    </header>
    
    <section class="main">
        <div>
            <h1>All your movies and TV shows in one place</h1>
        </div>
    </section>
    <!--TODO: MAKE EVERY CARD LEAD TO A PAGE OF MOVIE/SERIES OVERVIEW AND INFO AND DETAILS-->
    <section id="movie-section">
        <h2 class="title">Movies</h2>
        <h3>Now Playing</h3>
        <div class="content">
            <% now_playing_movies.forEach(now_playing_movie => { %>
                <div class="card">
                    <a class="movie-poster">
                        <img src="https://image.tmdb.org/t/p/w500<%= now_playing_movie.poster_path %>" alt="<%= now_playing_movie.title %>">
                    </a>
                </div>
            <% }) %>
        </div>
        <a href="/movies/now_playing?page=2">See more</a>
        <h3>Popular</h3>
        <div class="content">
            <% popular_movies.forEach(popular_movie => { %>
                <div class="card">
                    <a class="movie-poster">
                        <img src="https://image.tmdb.org/t/p/w500<%= popular_movie.poster_path %>" alt="<%= popular_movie.title %>">
                    </a>
                </div>
            <% }) %>
        </div>
        <a href="/movies/popular?page=2">See more</a>
        <h3>Top Rated</h3>
        <div class="content">
            <% top_rated_movies.forEach(top_rated_movie => { %>
                <div class="card">
                    <a class="movie-poster">
                        <img src="https://image.tmdb.org/t/p/w500<%= top_rated_movie.poster_path %>" alt="<%= top_rated_movie.title %>">
                    </a>
                </div>
            <% }) %>
        </div>
        <a href="/movies/top_rated?page=2">See more</a>
        <h3>Upcoming</h3>
        <div class="content">
            <% upcoming_movies.forEach(upcoming_movie => { %>
                <div class="card">
                    <a class="movie-poster">
                        <img src="https://image.tmdb.org/t/p/w500<%= upcoming_movie.poster_path %>" alt="<%= upcoming_movie.title %>">
                    </a>
                </div>
            <% }) %>
        </div>
        <a href="/movies/upcoming?page=2">See more</a>
    </section>
    
    <section id="tv-section">
        <h2 class="title">TV Series</h2>
        <h3>Airing Today</h3>
        <div class="content">
            <% airing_today_series.forEach(airing_today_show => { %>
                <div class="card">
                    <a class="movie-poster">
                        <img src="https://image.tmdb.org/t/p/w500<%= airing_today_show.poster_path %>" alt="<%= airing_today_show.title %>">
                    </a>
                </div>
            <% }) %>
        </div>
        <h3>Popular</h3>
        <div class="content">
            <% popular_series.forEach(popular_show => { %>
                <div class="card">
                    <a class="movie-poster">
                        <img src="https://image.tmdb.org/t/p/w500<%= popular_show.poster_path %>" alt="<%= popular_show.title %>">
                    </a>
                </div>
            <% }) %>
        </div>
        <h3>Top Rated</h3>
        <div class="content">
            <% top_rated_series.forEach(top_rated_show => { %>
                <div class="card">
                    <a class="movie-poster">
                        <img src="https://image.tmdb.org/t/p/w500<%= top_rated_show.poster_path %>" alt="<%= top_rated_show.title %>">
                    </a>
                </div>
            <% }) %>
        </div>
        <h3>On The Air</h3>
        <div class="content">
            <% on_the_air_series.forEach(on_the_air_show => { %>
                <div class="card">
                    <a class="movie-poster">
                        <img src="https://image.tmdb.org/t/p/w500<%= on_the_air_show.poster_path %>" alt="<%= on_the_air_show.title %>">
                    </a>
                </div>
            <% }) %>
        </div>
    </section>
    
    <script src="./scripts/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>